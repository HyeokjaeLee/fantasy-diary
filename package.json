{
  "name": "fantasy-diary",
  "private": true,
  "scripts": {
    "preinstall": "syncpack fix-mismatches && syncpack format",
    "dev:agent-server": "bun --filter @fantasy-diary/agent-server dev",
    "build": "bun --filter \"*\" build",
    "lint": "bun --filter \"*\" lint",
    "lint:fix": "bun --filter \"*\" lint:fix",
    "test": "bun test",
    "env:pull": "bun --filter @fantasy-diary/agent-server env:pull & bun --filter @fantasy-diary/web env:pull"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "syncpack": "^13.0.4",
    "typescript": "^5.9.3"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
